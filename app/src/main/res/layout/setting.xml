    <com.google.android.gms.ads.AdView
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="MEDIUM_RECTANGLE"
        ads:adUnitId="@string/admobe_banner_setting">
    </com.google.android.gms.ads.AdView>
    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/layout_inner"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/permanent_notification_heading_setting"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:id="@+id/permanent_notification_heading_text_view"
            android:textAppearance="?attr/textAppearanceLargePopupMenu"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/permanent_notification_heading_text_view"
            >
            <TextView
                android:layout_marginBottom="20dp"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"

                android:id="@+id/permanent_notification_detaile_text_view"
                android:text="@string/permanent_notification_detaile_setting"/>
            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"

                android:layout_marginLeft="15dp"
                android:checked="false"
                android:id="@+id/permanent_notification_checkbox_setting"
                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
