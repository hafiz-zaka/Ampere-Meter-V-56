            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textAppearance="?attr/textAppearanceLargePopupMenu"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/layout_inner"
        android:elevation="4dp"

        android:id="@+id/translater_linear_layout">
        <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/translater_heading_setting"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textAppearance="?attr/textAppearanceLargePopupMenu"/>

        <TextView
            android:padding="5dp"
            android:layout_marginBottom="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/translater_detaile_setting"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"


            />
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:drawSelectorOnTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/layout_inner"
        android:elevation="4dp"
        android:id="@+id/temperature_linear_layout">
