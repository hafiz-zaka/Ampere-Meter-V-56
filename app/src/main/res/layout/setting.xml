            android:layout_height="wrap_content"
            android:text="@string/temperature_heading_setting"
            android:id="@+id/teperature_tv_setting"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textAppearance="?attr/textAppearanceLargePopupMenu"/>

        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temperature_detaile_setting"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"


            android:id="@+id/textView2" />
            </LinearLayout>
    </LinearLayout>

       <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/layout_inner"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="wrap_content"
        android:id="@+id/alert_bt_setting"

        >
        <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
        <TextView
            android:padding="5dp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textAppearance="?attr/textAppearanceLargePopupMenu"
            android:text="@string/Alert_bt_setting"
            android:id="@+id/textView3" />
</LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/layout_inner"
        android:layout_width="match_parent"
        android:elevation="4dp"

        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/charging_time_heading_tv"
        android:text="@string/charging_time_heading_setting"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp"
        android:textAppearance="?attr/textAppearanceLargePopupMenu"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/charging_time_heading_tv"
        >
        <TextView
            android:layout_marginBottom="20dp"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/charging_ime_detaile_setting"/>
        <CheckBox
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:checked="true"
            android:id="@+id/charging_time_checkbox_setting"
            />
    </LinearLayout>
