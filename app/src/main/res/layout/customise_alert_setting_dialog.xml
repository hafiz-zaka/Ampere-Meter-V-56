<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/your_dialog_root_element"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="alert name"
    android:layout_gravity="center"
    android:id="@+id/alert_text_name"
    android:textAppearance="?attr/textAppearanceLargePopupMenu"
    android:textColor="@color/colorPrimary"
    android:padding="5dp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:layout_gravity="center"
        android:id="@+id/alert_valu"
        android:textAppearance="?attr/textAppearanceLargePopupMenu"
        android:padding="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:background="?attr/selectableItemBackground"

            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:id="@+id/aleret_dicriment"
            android:layout_height="wrap_content"
android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="-"/>
<SeekBar
    android:layout_weight="6"

    android:id="@+id/your_dialog_seekbar"
    android:layout_width="0dp"
    android:layout_height="wrap_content"

    >
</SeekBar>

        <TextView

            android:background="?attr/selectableItemBackground"

            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/aleret_incriment"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:text="+"
             />
    </LinearLayout>

    <TextView

        android:background="?attr/selectableItemBackground"
        android:id="@+id/ok_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/ok_buton"
    android:layout_gravity="right"
    android:padding="20dp"
    android:textAppearance="?attr/textAppearanceLargePopupMenu"
    android:textColor="@color/colorPrimary"
    />
    </LinearLayout>
